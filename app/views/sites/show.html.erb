<div class="container text-center">

  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://unsplash.it/?random');">

    <div class="banner-content">
      <h1><%= @site.name %></h1>
      <p><%= @site.shortdesc %></p>
      <% if @site.user %>
          <p>Créé par <%= @site.user.email %></p>
      <% end %>
      <%= @site.image %>
      <%= link_to "Voir le site", @site.url, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
</div>